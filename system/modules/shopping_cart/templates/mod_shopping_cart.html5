<?php if ($this->products): ?>
    <ul>
        <?php foreach ($this->products as $product): ?>
            <li>
                <strong><?php echo $product->name; ?></strong> - $<?php echo $product->price; ?>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p>No products available.</p>
<?php endif; ?>
